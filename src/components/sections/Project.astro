---
import Section from "../Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="project-card"
              title={`Ver proyecto ${name}`}
            >
              <header>
                <h3>
                  {name}
                  {isActive && <span>&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </a>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  .project-card {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  .project-card header {
    flex: 1;
  }

  .project-card h3 {
    margin-bottom: 4px;
  }

  .project-card {
    color: #111;
  }

  .project-card:hover h3 {
    text-decoration: underline;
  }

  .project-card:hover {
    animation: aumentar 0.3s ease forwards;
  }

  .project-card p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  .project-card h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes aumentar {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.03);
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    .project-card {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }

  @media print {
    .project-card h3 span {
      animation-name: none;
    }
  }
</style>
