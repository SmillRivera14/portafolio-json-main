---
import Section from "../Section.astro";
import {certificates} from "@cv"

---

<Section title="Certificados">
<ul>
    {
      certificates.map(
        ({name, date, issuer, url}) =>
        {
          return(
            <li>
              <article>
                <header>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                </header>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</section>

<style>
   ul {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>