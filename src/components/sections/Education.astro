---
import Section from "../Section.astro";
import { education } from "@cv";
import "../sections/styles/theme.css";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Ver ${institution}`} target="_blank">
                      {institution}
                    </a>
                  </h3>
                  <h4>{area}</h4>
                </div>
                <div>
                  <time datetime={startDate} date-title={startDate}>
                    {startYear}
                  </time>
                  {" - "}
                  <time datetime={endDate} date-title={endDate}>
                    {endYear}
                  </time>
                </div>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--color-text-primary);
  }

  article a {
    color: var(--color-text-primary);
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: var(--color-text-secondary);
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: var(--color-bg);
    color: var(--color-bg);
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px var(--color-tooltip-shadow);
    opacity: 0;
    border: 1px solid var(--color-tooltip-border);
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
